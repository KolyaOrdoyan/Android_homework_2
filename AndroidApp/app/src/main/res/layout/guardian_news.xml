<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/guardian_news_image_view"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/guardian_news_text_view_1"
        style="@style/guardianTextViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1"
        app:layout_constraintTop_toBottomOf= "@+id/guardian_news_image_view" />

    <TextView
        android:id="@+id/guardian_news_text_view_2"
        style="@style/guardianTextViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2"
        app:layout_constraintTop_toBottomOf="@+id/guardian_news_text_view_1" />

    <TextView
        android:id="@+id/guardian_news_text_view_3"
        style="@style/guardianTextViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="3"
        app:layout_constraintTop_toBottomOf="@+id/guardian_news_text_view_2" />


</androidx.constraintlayout.widget.ConstraintLayout>
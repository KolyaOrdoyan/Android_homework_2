<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.androidhomework.navigationexample.ui.MainFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main" >
        <action
            android:id="@+id/action_mainFragment_to_orangeFragment"
            app:destination="@id/orangeFragment" />
        <action
            android:id="@+id/action_mainFragment_to_greyFragment"
            app:destination="@id/greyFragment" />
    </fragment>
    <fragment
        android:id="@+id/orangeFragment"
        android:name="com.example.androidhomework.navigationexample.ui.OrangeFragment"
        android:label="fragment_orange"
        tools:layout="@layout/fragment_orange" />
    <fragment
        android:id="@+id/greyFragment"
        android:name="com.example.androidhomework.navigationexample.ui.GreyFragment"
        android:label="fragment_greey"
        tools:layout="@layout/fragment_greey" />
</navigation>